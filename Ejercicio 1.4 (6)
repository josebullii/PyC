Algoritmo Ejercicio6
	
	Definir nombre, letra Como Caracter;
	Definir i, j Como Entero;
	//Definir bandera Como Logico;
	nombre = "";
	//bandera = Falso;
	
	Escribir "Escribe un nombre";
	Leer nombre;
	
	nombre = minusculas(nombre);
	
	Escribir Sin Saltar Mayusculas(subcadena(nombre,0,0));
	
	Para i = 1 Hasta Longitud(nombre) Hacer
		
		letra = subcadena(nombre,i,i);
		Si Subcadena(nombre,i,i) == " " Entonces
			//bandera = Verdadero;
			Escribir Sin Saltar " " mayusculas(subcadena(nombre,i+1,i+1));
			i = i + 1;
		SiNo
			Escribir Sin Saltar letra;
		FinSi
		
	FinPara
	
	Escribir " ";
	
FinAlgoritmo
